@model List<SelectListItem>
@{
    var studentsExsiting = Model.Where(p => p.Selected == true).ToList();
    var studentsNotExsiting = Model.Where(p => p.Selected == false).ToList();
    string PublicResources = "~/Views/Exams/LoadExamsStudents/PublicResource";
 }

<div class="jarviswidget jarviswidget-color-blueDark">
    <header style="border-color: #B2B5B9!important;background: #B2B5B9;">
        <h2><span class="badge bg-color-orange" style="margin-right:10px;">@Html.Resource("Step", PublicResources) 2 </span>@Html.Resource("SelectStudents", PublicResources) </h2>
    </header>
    <input type="hidden" id="StudentID" />
    <input type="hidden" id="CycleID" />
    <input type="hidden" id="ClassID" />
    <input type="hidden" id="DivisionID" />
    <input type="hidden" id="TermID" />

    <div class="well well-sm">
        @if (studentsExsiting != null && studentsExsiting.Count > 0)
        {
            <form>
                <fieldset>
                    <legend>
                       @Html.Resource("DefinedStudents", PublicResources) 
                    </legend>
                    <ul id="external-events" class="list-unstyled">
                        @for (int i = 0; i < studentsExsiting.Count(); i++)
                    {
                    <li style="position: relative; width: 100%;cursor: pointer!important; " onclick="LoadStudentById('@studentsExsiting[i].Value');">
                        <span class="bg-color-blue  txt-color-white" data-icon="fa-time" style="cursor: pointer!important; "><i class="fa  fa-pencil-square-o txt-color-white"></i><span style="margin-left:5%">@studentsExsiting[i].Text</span></span>
                    </li>
                    }
                    </ul>
                </fieldset>
            </form>
        }
        @if (studentsNotExsiting != null && studentsNotExsiting.Count > 0)
        {
            <form>
                <fieldset>
                    <legend>
                       @Html.Resource("UndefinedStudents", PublicResources) 
                    </legend>
                    <ul id="external-events" class="list-unstyled">
                        @for (int i = 0; i < studentsNotExsiting.Count(); i++)
                {
                    <li style="position: relative; width: 100%;cursor: pointer!important; " onclick="LoadStudentById('@studentsNotExsiting[i].Value');">
                        <span class="bg-color-orange  txt-color-white" data-icon="fa-time" style="cursor: pointer!important; "><i class="fa  fa-pencil-square-o txt-color-white"></i><span style="margin-left:5%">@studentsNotExsiting[i].Text</span></span>
                    </li>
                    }
                    </ul>
                </fieldset>
            </form>

        }
    </div>
</div>




