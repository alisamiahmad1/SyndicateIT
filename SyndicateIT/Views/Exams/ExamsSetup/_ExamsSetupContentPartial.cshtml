@model SyndicateIT.Model.ViewModel.Exam.ExamsSetupContentViewModel
@{
    Layout = null;
    string PublicResources = "~/Views/Exams/ExamsSetup/_ExamsSetupContentPartial.cshtml";
}

@Html.Partial("~/Views/Shared/_NavigationPartial.cshtml", @Model.Navigation)
<script src="~/Scripts/Views/Exams/examsSetup.js"></script>
<div id="content">  
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="@Model.ClassTitle"></i> @Model.Title<span></span>
            </h1>
        </div>
    </div>
    <div class="alert alert-info">
        <ul>
            <li style="margin-bottom: 10px;">@Html.Resource("ExamsSetupNote", PublicResources) </li>          
        </ul>        
    </div>
    <section id="enrollment-content" class="">   
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-sm-12 sortable-grid ui-sortable">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2>@Html.Resource("SearchExams", PublicResources)</h2>
                        <span class="jarviswidget-loader"><i class="fa fa-lg fa-fw fa-th-list"></i></span>
                    </header>
                    <!-- widget div-->
                    <div role="content">                     
                        <div class="row">                            
                          @Html.Partial("~/Views/Exams/ExamsSetup/_ExamsSearchPartial.cshtml", @Model.ExamsSearch)
                        </div>          
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
            <!-- NEW WIDGET START -->         
            <!-- WIDGET END -->
        </div>
    </section>
    <section id="widget-grid" class="" >
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" role="widget">
                    <header role="heading">
                        <div class="jarviswidget-ctrls" role="menu">
                            <a href="javascript:void(0);" class="button-icon jarviswidget-toggle-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Collapse">
                                <i class="fa fa-minus "></i>
                            </a>
                            <a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen">
                                <i class="fa fa-expand "></i>
                            </a>
                        </div>                      
                            
                    
                        <span class="widget-icon"> <i class="@Model.ClassTitle"></i> </span>
                        <h3 class="widget-h3">@Html.Resource("ExamList", PublicResources) </h3>
                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <!-- widget div-->
                    <div role="content" id="Grid_User">
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body " id="ExamsSetup-Details">

                          
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
    </section> 
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ExamUL").children().find('li').removeClass("active");
        $("#index").addClass("active");
        $("#Exam").addClass("open");
        $("#ExamUL").show();
        $("#Exam").children().find('em').removeClass("fa fa-plus-square-o");
        $("#Exam").children().find('em').addClass("fa fa-minus-square-o");
        SearchExams();
    });

</script>


@section Scripts {     
    @Scripts.Render("~/bundles/jqueryval")
}
