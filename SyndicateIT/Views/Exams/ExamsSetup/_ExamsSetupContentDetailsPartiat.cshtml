@model SyndicateIT.Model.ViewModel.Exam.ExamsSetupContentViewModel

<script src="~/Scripts/Views/Plans/plansSetup.js"></script>
<script src="~/Scripts/plugin/bootstrap-wizard/jquery.bootstrap.wizard.min.js"></script>
<script src="~/Scripts/plugin/fuelux/wizard/wizard.min.js"></script>
@Html.Partial("~/Views/Shared/_NavigationPartial.cshtml", @Model.Navigation)
@{
    Layout = null;
    string PublicResources = "~/Views/Exams/ExamsSetup/_ExamsSetupContentDetailsPartiat.cshtml";
}

<div id="content">  
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="@Model.ClassTitle"></i> @Model.Title<span></span>
            </h1>
        </div>
    </div>
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">          
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-sortable" id="wid-id-h" data-widget-editbutton="false" data-widget-deletebutton="false" role="widget" >
                        <!-- widget div-->
                    <div role="content" style="background-color:transparent!important;border-color: transparent!important;">
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            <div class="row">
                                <form id="wizard-1" novalidate="novalidate">
                                    <div id="bootstrap-wizard-1" class="col-sm-12">
                                        <div class="form-bootstrapWizard">
                                            <ul class="bootstrapWizard form-wizard">
                                                <li class="active" data-target="#step1" style="width:20%!important">
                                                    <a href="#tab1" data-toggle="tab" onclick="LoadExamsDefinitions();" > <span class="step">1</span> <span class="title">@Html.Resource("ExamDefinition", PublicResources) </span> </a>
                                                </li>                                              
                                                <li data-target="#step4" style="width:20%!important">
                                                    <a href="#tab4" data-toggle="" id="Materials-a"> <span class="step">2</span> <span class="title"> @Html.Resource("LoadMaterials", PublicResources)</span> </a>
                                                </li>
                                                <li data-target="#step5" style="width:20%!important">
                                                    <a href="#tab5" data-toggle="" id="Students-a" > <span class="step">3</span> <span class="title">@Html.Resource("LoadStudents", PublicResources)</span> </a>
                                                </li>   
                                                <li data-target="#step4" style="width:20%!important">
                                                    <a href="#tab4" data-toggle="" id="Checkers-a"> <span class="step">4</span> <span class="title">@Html.Resource("PublishedTags", PublicResources)</span> </a>
                                                </li>                                              
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="tab-content">
                                            <div class="tab-pane active" id="Main-exams" style="padding-top: 5%;"></div>                                         
                                                
                                            </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
            <!-- WIDGET END -->
        </div>
        <!-- end row -->
    </section> 
 </div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#PlansUL").children().find('li').removeClass("active");
        $("#PlansSetup").addClass("active");
        $("#Plans").addClass("open");
        $("#PlansUL").show();
        $("#Plans").children().find('em').removeClass("fa fa-plus-square-o");
        $("#Plans").children().find('em').addClass("fa fa-minus-square-o");      
        LoadExamsDefinitions();
    });
</script>
@section Scripts {     
    @Scripts.Render("~/bundles/jqueryval")
}
