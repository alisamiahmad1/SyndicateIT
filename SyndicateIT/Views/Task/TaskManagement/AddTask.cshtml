@model SyndicateIT.Model.ViewModel.ProfileManagement.ProfileDetails.PersonalInformationsViewModel
@{   
    string PublicResources = "~/Views/Task/TaskManagement/AddTask.cshtml";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Profile";
}
<!-- MAIN CONTENT -->
<script src="~/Scripts/Views/Profiles/profiles.js" type="text/javascript"></script>
<div id="MainContent">
    <div id="content">
        <div class="row">
            <div class="col-xs-12 col-sm-9 col-md-9 col-lg-9">
                <h1 class="page-title txt-color-blueDark">
                    <i class="fa fa-lg fa-fw fa-pencil-square-o"></i>Task Manegement<span></span>
                </h1>
            </div>.
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <!-- Button trigger modal -->

            </div>
        </div>
        <article class="col-sm-12 sortable-grid ui-sortable">
            @using (Html.BeginForm("SavePersonalInformations", "ProfileManagement", FormMethod.Post, new { @class = "", role = "form", id = "PersonalInformations-form" }))
            {
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2>Task Info</h2>
                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <!-- widget div-->
                    <div role="content">
                        <div class="row">
                            <div class="widget-body">


                                @Html.ValidationSummary(true)
                                <fieldset>
                                    <div class="form-group  col-sm-12">&nbsp;</div>
                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.FirstName, "Task name", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7">
                                            @Html.Kendo().TextBoxFor(model => model.FirstName).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = "Enter Task Name" }).Name("FirstName").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="FirstName" data-valmsg-for="FirstName" id="FirstName_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequierdFirstName", PublicResources)</span>
                                        </div>
                                    </div>
                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.FirstNameName_Ar, "Task Type", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7">
                                            @Html.Kendo().TextBoxFor(model => model.FirstNameName_Ar).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = "Enter Task Type" }).Name("FirstNameName_Ar").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="FirstName" data-valmsg-for="FirstNameName_Ar" id="FirstNameName_Ar_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("RequierdFirstNameName_Ar", PublicResources)</span>
                                        </div>
                                    </div>

                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.Date_Of_Birth, "Start date", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7" style="padding: 0 !important;">
                                            @Html.Kendo().DatePickerFor(model => model.Date_Of_Birth).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = "Enter Start date" }).Name("Date_Of_Birth").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="Date_Of_Birth" data-valmsg-for="Date_Of_Birth" id="Date_Of_Birth_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequierdDate_Of_Birth", PublicResources)</span>
                                        </div>

                                    </div>


                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.Date_Of_Birth1, "End date", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7" style="padding: 0 !important;">
                                            @Html.Kendo().DatePickerFor(model => model.Date_Of_Birth1).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("EnterDate_Of_Birth", PublicResources) }).Name("Date_Of_Birth1").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="Date_Of_Birth" data-valmsg-for="Date_Of_Birth" id="Date_Of_Birth_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequierdDate_Of_Birth", PublicResources)</span>
                                        </div>

                                    </div>


                                    <div class="form-group  col-sm-12">
                                        @Html.LabelFor(m => m.LastName, "Description", new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextArea("LastName", Model.LastName, new { @class = "k-textbox", style = "width: 100%;height: 100px;" })
                                        </div>
                                    </div>

                                 


                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget -->

                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
                    <header role="heading">
                        <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                        <h2>Add Sub Task By Member</h2>
                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <!-- widget div-->
                    <div role="content">
                        <div class="row">
                            <div class="widget-body">


                                @Html.ValidationSummary(true)
                                <fieldset>
                                    <div class="form-group  col-sm-12">&nbsp;</div>
                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.Date_Of_Birth, "Start date", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7" style="padding: 0 !important;">
                                            @Html.Kendo().DatePickerFor(model => model.Date_Of_Birth).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = "Enter Start date" }).Name("Date_Of_Birth").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="Date_Of_Birth" data-valmsg-for="Date_Of_Birth" id="Date_Of_Birth_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequierdDate_Of_Birth", PublicResources)</span>
                                        </div>

                                    </div>


                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.Date_Of_Birth1, "End date", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7" style="padding: 0 !important;">
                                            @Html.Kendo().DatePickerFor(model => model.Date_Of_Birth1).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("EnterDate_Of_Birth", PublicResources) }).Name("Date_Of_Birth1").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="Date_Of_Birth" data-valmsg-for="Date_Of_Birth" id="Date_Of_Birth_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequierdDate_Of_Birth", PublicResources)</span>
                                        </div>

                                    </div>
                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.Genders_Id, "Member ID", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7">
                                            @(Html.Kendo().DropDownListFor(m => m.Genders_Id)
                                                                                                                                                .DataTextField("Text")
                                                                                                                                                .DataValueField("Value")
                                                                                                                                                .OptionLabel("Select Member Id")

                                                                                                                                                .Enable(@Model.IsEdit)
                                                                                                                                                .HtmlAttributes(new { @class = "ui-select form-control-md10" })
                                                                                                                                                .Value(Model.Genders_Id.ToString())

                                                                                                                                                .DataSource(source =>
                                                                                                                                                {
                                                                                                                                                    source.Read(read =>
                                                                                                                                                    {
                                                                                                                                                        read.Action("GetGendergg", "ProfileManagement");
                                                                                                                                                    });
                                                                                                                                                })
                                            )
                                        </div>
                                    </div>
                                    <div class="form-group  col-sm-6">
                                        @Html.LabelFor(m => m.FirstNameName_Ar, "Sub task", new { @class = "col-md-4 control-label" })
                                        <div class="col-md-7">
                                            @Html.Kendo().TextBoxFor(model => model.FirstNameName_Ar).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = "Enter Task Type" }).Name("FirstNameName_Ar").Enable(@Model.IsEdit)
                                            <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="FirstName" data-valmsg-for="FirstNameName_Ar" id="FirstNameName_Ar_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("RequierdFirstNameName_Ar", PublicResources)</span>
                                        </div>
                                    </div>




                                    <div class="form-group  col-sm-12">
                                        @Html.LabelFor(m => m.LastName, "Description", new { @class = "col-md-2 control-label" })
                                        <div class="col-md-10">
                                            @Html.TextArea("LastName", Model.LastName, new { @class = "k-textbox", style = "width: 100%;height: 100px;" })
                                        </div>
                                    </div>

                                    <div class="col-lg-2">
                                        <button type="button" onclick="SaveEducation();" class="btn bg-color-orange txt-color-white" data-toggle="#phoneInfo">
                                           Add Sub Task
                                        </button>
                                    </div>


                                </fieldset>
                            </div>
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget -->
            }
        </article>
        <article class="col-sm-12 sortable-grid ui-sortable">
            <div class="alert alert-success alert-block">
                <h4 class="alert-heading">List Task By Member</h4>
            </div>
            </article>
    </div>
</div>
    <!-- END MAIN CONTENT -->
    <script type="text/javascript">
    $(document).ready(function () { });
    var loadPofilesUrl = '@Html.GetUrl("LoadProfilesList", "ProfileManagement", SessionContent.Current.Corporate.IsSecure)';
    var loader = '@Utilities.GetAbsotuleUrl("~/Content/image/ajax-loader.gif")';

    </script>
    @section Scripts {
        @Scripts.Render("~/bundles/kendo/js")
    }
