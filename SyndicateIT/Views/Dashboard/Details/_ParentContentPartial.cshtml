                                                        <th>7</th>
                                                        <th>8</th>
                                                        <th>9</th>
                                                        <th>10</th>
                                                        <th>11</th>
                                                        <th>12</th>
                                                        <th>13</th>
                                                        <th>14</th>
                                                        <th>15</th>
                                                        <th>16</th>
                                                        <th>17</th>
                                                        <th>18</th>
                                                        <th>19</th>
                                                        <th>20</th>
                                                        <th>21</th>
                                                        <th>22</th>
                                                        <th>23</th>
                                                        <th>24</th>
                                                        <th>25</th>
                                                        <th>26</th>
                                                        <th>27</th>
                                                        <th>28</th>
                                                        <th>29</th>
                                                        <th>30</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @for (int i = 0; i < Model.ServiceMonthlyTable.Count; i++)
                                                    {
                                                        <tr>
                                                            <th><code>@Model.ServiceMonthlyTable[i].UserName</code></th>
                                                            @for (int j = 0; j < Model.ServiceMonthlyTable[i].ItemList.Count; j++)
                                                            {
                                                                <td class="@Model.ServiceMonthlyTable[i].ItemList[j].Value">@Model.ServiceMonthlyTable[i].ItemList[j].Text</td>
                                                            }
                                                        </tr>
                                                    }

                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                            </article>

                        </div>
                        <!-- end widget content -->

                    </div>
                    <!-- end widget div -->

                </div>
                <!-- end widget -->

            </article>
            <!-- WIDGET END -->

        </div>

    </section>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
