
@model SyndicateIT.Model.ViewModel.SetupManagement.Company.CompanyViewModel
@using SyndicateIT.Views.App_GlobalResources
@{
    Layout = null;
    string PublicResources = "~/Views/SetupManagement/Company/PublicResource";
}
@Html.Partial("~/Views/Shared/_NavigationPartial.cshtml", @Model.Navigation)
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="@Model.ClassTitle"></i> @Model.Title<span></span>
            </h1>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/_AlertPartial.cshtml", Model.Alert)
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <article class="col-sm-12 sortable-grid ui-sortable">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
                    <header role="heading"></header>
                    <!-- widget div-->
                    <div role="content">
                        <div class="row">
                            <div class="widget-body">
                                @using (Html.BeginForm("AddUpdateCompany", "Company", FormMethod.Post, new { @class = "smart-form", role = "form", id = "Company-form" }))
                                {
                                    @Html.HiddenFor(m => m.Company_ID)
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true)
                                    <fieldset>
                                        <section class="form-group  col-sm-6">
                                            @Html.Label(GeneralResources.IS_ACTIVE, new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                <label class="checkbox">
                                                    @Html.CheckBoxFor(m => m.IS_ACTIVE, new { @checked = "checked" })
                                                    <i></i>
                                                </label>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-6">
                                            @Html.LabelFor(m => m.Company_Name, Html.Resource("Company_Name", PublicResources), new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                @Html.Kendo().TextBoxFor(model => model.Company_Name).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("Company_Name")
                                                <div class="text-danger field-validation-error" id="Company_Name_ValidationMsg" style="display:none;">
                                                    <span for="SearchCompany" class=""> @Html.Resource("Company_Name_Required", PublicResources)</span>
                                                </div>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-6">
                                            @Html.LabelFor(m => m.Company_Website, Html.Resource("Company_Website", PublicResources), new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                @Html.Kendo().TextBoxFor(model => model.Company_Website).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("Company_Website")
                                                <div class="text-danger field-validation-error" id="Company_Name_ValidationMsg" style="display:none;">
                                                    @*<span for="SearchCompany" class=""> @Html.Resource("Company_Name_Required", PublicResources)</span>*@
                                                </div>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-6">
                                            @Html.LabelFor(m => m.Company_Email, Html.Resource("Company_Email", PublicResources), new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                @Html.Kendo().TextBoxFor(model => model.Company_Email).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("Company_Email")
                                                <div class="text-danger field-validation-error" id="Company_Name_ValidationMsg" style="display:none;">
                                                    @*<span for="SearchCompany" class=""> @Html.Resource("Company_Name_Required", PublicResources)</span>*@
                                                </div>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-6">
                                            @Html.LabelFor(m => m.Reg_Finance, Html.Resource("Reg_Finance", PublicResources), new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                @Html.Kendo().TextBoxFor(model => model.Reg_Finance).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("Reg_Finance")
                                                <div class="text-danger field-validation-error" id="Company_Name_ValidationMsg" style="display:none;">
                                                    @*<span for="SearchCompany" class=""> @Html.Resource("Company_Name_Required", PublicResources)</span>*@
                                                </div>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-6">
                                            @Html.LabelFor(m => m.Reg_CNSS, Html.Resource("Reg_CNSS", PublicResources), new { @class = "col-md-4 control-label" })
                                            <div class="col-md-6">
                                                @Html.Kendo().TextBoxFor(model => model.Reg_CNSS).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("Reg_CNSS")
                                                <div class="text-danger field-validation-error" id="Company_Name_ValidationMsg" style="display:none;">
                                                    @*<span for="SearchCompany" class=""> @Html.Resource("Company_Name_Required", PublicResources)</span>*@
                                                </div>
                                            </div>
                                        </section>
                                        <section class="form-group  col-sm-12">
                                            @Html.LabelFor(m => m.Company_Description, Html.Resource("Company_Description", PublicResources), new { @class = "col-md-2 text-left control-label" })
                                            <div class="col-md-9">
                                                @(Html.Kendo().EditorFor(m => m.Company_Description).Tools(tools => tools.Clear().Bold().Italic().Underline().Strikethrough().JustifyCenter().JustifyFull().JustifyLeft().JustifyRight().CreateLink().Unlink().TableEditing().FontColor().BackColor().Pdf().ViewHtml()))
                                           </div>
                                        </section>                    
                                      </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                    <!-- end widget content -->
                </div>
                <!-- end widget -->
                <div class="footer">
                    <button type="button" class="btn btn-primary general-btn" onclick="SaveCompany();">@GeneralResources.save</button>
                </div>
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/Company")
}


