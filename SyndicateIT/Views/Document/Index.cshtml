@model List<SyndicateIT.DataLayer.DataContext.T_Document_Template>

<h2>form templates</h2>
<a href="~/Document/Save">new tepmlate</a>
<table class="table table-bordered">
    <tr>
        <th></th>
        <th>name</th>
        <th>forms</th>
        <th>inputs</th>
        <th></th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Model[i].Id</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].T_Form.Count</td>
            <td>@Model[i].NbInput</td>
            <td>
                <a href="~/Document/Save/@Model[i].Id">Edit</a><br />
                <a href="~/Document/Remove/@Model[i].Id">Delete</a><br />
                <a href="~/Document/Form/@Model[i].Id">Fill From</a>
                <a href="~/Document/Forms/@Model[i].Id">Forms</a>
            </td>
        </tr>
    }
</table>