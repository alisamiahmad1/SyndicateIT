@{  string resouceFilePath = "~/Views/Shared/_HeaderPartial.cshtml"; Layout = null;}
<div id="logo-group">
    <!-- PLACE YOUR LOGO HERE -->
   
    <span id="logo" style="margin-top:3px!important;"> <img src="@string.Format(@Utilities.GetAbsotuleUrl("/Content/image/{0}.png"), SessionContent.Current.Corporate.LogoName)" alt="SkyWeb" style="width:46px!important;" > </span>
    <!-- END LOGO PLACEHOLDER -->  
    <span id="activity" class="activity-dropdown"> <i class="fa fa-user"></i> <b class="badge bg-color-red bounceIn animated">21</b> </span>
    <div class="ajax-dropdown" style="display: none;">

        <!-- the ID links are fetched via AJAX to the ajax container "ajax-notifications" -->
        <div class="btn-group btn-group-justified" data-toggle="buttons">
            <label class="btn btn-default">
                <input type="radio" name="activity" id="ajax/notify/mail.html">
                Msgs (14)
            </label>
            <label class="btn btn-default">
                <input type="radio" name="activity" id="ajax/notify/notifications.html">
                Notify (3)
            </label>
            <label class="btn btn-default">
                <input type="radio" name="activity" id="ajax/notify/tasks.html">
                Alert (4)
            </label>
        </div>

        <!-- notification content -->
        <div class="ajax-notifications custom-scroll">

            <div class="alert alert-transparent">
                <h4>Click a button to show messages here</h4>
                This blank page message helps protect your privacy, or you can show the first message here automatically.
            </div>

            <i class="fa fa-lock fa-4x fa-border"></i>

        </div>
        <!-- end notification content -->
        <!-- footer: refresh area -->
        <span>
            Last updated on: 12/12/2013 9:43AM
            <button type="button" data-loading-text="<i class='fa fa-refresh fa-spin'></i> Loading..." class="btn btn-xs btn-default pull-right">
							<i class="fa fa-refresh"></i>
						</button>
        </span>
        <!-- end footer -->

    </div>
</div>
<!-- #PROJECTS: projects dropdown -->
<div class="project-context hidden-xs">
    <span class="label">@Html.Resource("Projects", resouceFilePath):</span>
    <span class="project-selector dropdown-toggle" data-toggle="dropdown"> @Html.Resource("SyndicateIT", resouceFilePath) <i class="fa fa-angle-down"></i></span>
    <!-- Suggestion: populate this list with fetch and push technique -->
    <ul class="dropdown-menu">
        <li>
            <a href="javascript:void(0);">@Html.Resource("CustomerService", resouceFilePath)</a>
        </li>
        <li>
            <a href="javascript:void(0);">@SessionContent.Current.Corporate.CustomerServiceEmail</a>
        </li>
        <li>
            <a href="javascript:void(0);">+ @SessionContent.Current.Corporate.CustomerServicePhone</a>
        </li>
        <li class="divider"></li>       
    </ul>
    <!-- end dropdown-menu-->   
</div>
<span id="logo"> <img src="@Utilities.GetAbsotuleUrl("~/Content/image/logo.png")" alt="SkyWeb"> </span>
<!-- end projects dropdown -->

<div class="pull-right">

    <!-- collapse menu button -->
