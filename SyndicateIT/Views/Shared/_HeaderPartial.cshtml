            <span>
                <a href="@Html.GetUrl("LogOff","Account", SessionContent.Current.Corporate.IsSecure)" title="@Html.Resource("SignOut", resouceFilePath)" data-action="userLogout" data-logout-msg="@Html.Resource("SecurityBrowser", resouceFilePath)">
                    <i class="fa fa-sign-out"></i>
                </a>
            </span>
        </div>
    }
    else
