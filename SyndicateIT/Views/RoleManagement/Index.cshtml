
@model SyndicateIT.Model.ViewModel.RoleManagement.RoleManagementContentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Role";
}
<script src="~/Scripts/Views/RoleManagement/role.js" type="text/javascript"></script>
@Html.Partial("~/Views/Shared/_NavigationPartial.cshtml", @Model.Navigation)
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="@Model.ClassTitle"></i> @Model.Title<span></span>
            </h1>
        </div>
    </div>
    <section id="widget-grid" class="">
        <!-- row -->
        <div class="row">
            <!-- NEW WIDGET START -->
            <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">
                <!-- Widget ID (each widget will need unique ID)-->
                <div class="jarviswidget jarviswidget-color-blueDark jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" role="widget">
                    <header role="heading">
                        <div class="jarviswidget-ctrls" role="menu">
                            <a href="javascript:void(0);" class="button-icon jarviswidget-toggle-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Collapse">
                                <i class="fa fa-minus "></i>
                            </a>
                            <a href="javascript:void(0);" class="button-icon jarviswidget-fullscreen-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Fullscreen">
                                <i class="fa fa-expand "></i>
                            </a>
                        </div>
                        <span class="widget-icon"> <i class="@Model.ClassTitle"></i> </span>
                        <h2>Role List</h2>
                        <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
                    </header>
                    <!-- widget div-->
                    <div role="content" id="Grid_User">
                        <!-- widget edit box -->
                        <div class="jarviswidget-editbox">
                            <!-- This area used as dropdown edit box -->
                        </div>
                        <!-- end widget edit box -->
                        <!-- widget content -->
                        <div class="widget-body">
                            @Html.Partial("~/Views/RoleManagement/_GridRolePartial.cshtml", Model)
                        </div>
                        <!-- end widget content -->
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </article>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/kendo/js")
    <script type="text/javascript">
        $(document).ready(function () {
            $("AdministrationUL").children().find('li').removeClass("active");
            $("#RoleManagement").addClass("open");
            $("#AdministrationUL").show();
            $("#Administration").children().find('em').removeClass("fa fa-plus-square-o");
            $("#Administration").children().find('em').addClass("fa fa-minus-square-o");
        });
    </script>
}
