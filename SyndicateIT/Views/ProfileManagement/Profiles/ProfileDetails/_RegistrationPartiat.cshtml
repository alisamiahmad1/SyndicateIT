
@model SyndicateIT.Model.ViewModel.ProfileManagement.ProfileDetails.RegistrationViewModel
@{
    Layout = null;
    string PublicResources = "~/Views/ProfileManagement/Profiles/ProfileDetails/PublicResources";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@Html.Partial("~/Views/Shared/_AlertPartial.cshtml", Model.Alert)

<article class="col-sm-12 sortable-grid ui-sortable">
    @using (Html.BeginForm("SaveRegistration", "ProfileManagement", FormMethod.Post, new { @class = "", role = "form", id = "Registration-form" }))
    {
    <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
            <header role="heading">
                <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                <h2>@Html.Resource("LblRegistration", PublicResources)</h2>
                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            </header>
            <!-- widget div-->
            <div role="content">
                <div class="row">
                    <div class="widget-body">
                        @Html.HiddenFor(m => m.Registration_ID)
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>

                            <div class="form-group  col-sm-12">
                                <label class="col-md-2 control-label">@Html.Resource("HasRegistration", PublicResources)</label>
                                <div class="col-md-6">
                                    @Html.Kendo().CheckBoxFor(model => model.HasRegistration).Enable(@Model.IsEdit)
                                </div>
                            </div>

                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.TypeSpecialty, Html.Resource("TypeSpecialty", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-6">
                                    @Html.Kendo().TextBoxFor(model => model.TypeSpecialty).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("TypeSpecialty").Enable(@Model.IsEdit)
                                    <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="TypeSpecialty" data-valmsg-for="TypeSpecialty" id="TypeSpecialty_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("TypeSpecialtyValid", PublicResources)</span>
                                </div>
                            </div>
                           
                            <div class="form-group  col-sm-12">
                                <span class="label bg-color-blueLight  " style="font-size:100%!important">Time Period</span>

                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.From, Html.Resource("From", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-6">
                                    @Html.Kendo().DatePickerFor(model => model.From).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("EnterFrom", PublicResources) }).Name("From").Enable(@Model.IsEdit)
                                    <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="From" data-valmsg-for="From" id="From_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("FromValid", PublicResources)</span>
                                </div>
                            </div>

                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.To, Html.Resource("To", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-6">
                                    @Html.Kendo().DatePickerFor(model => model.To).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("EnterTo", PublicResources) }).Name("To").Enable(@Model.IsEdit)
                                    <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="To" data-valmsg-for="To" id="To_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("ToValid", PublicResources)</span>
                                </div>
                            </div>
                            <div class="form-group  col-sm-12">
                                <span class="label bg-color-blueLight  " style="font-size:100%!important">Welcome Package </span>

                            </div>
                            <div class="form-group  col-sm-6">
                                <label class="col-md-4 control-label">@Html.Resource("HasCardIssued", PublicResources)</label>
                                <div class="col-md-6">
                                    @Html.Kendo().CheckBoxFor(model => model.HasCardIssued).Enable(@Model.IsEdit)
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                <label class="col-md-4 control-label">@Html.Resource("HasCardDelivered", PublicResources)</label>
                                <div class="col-md-6">
                                    @Html.Kendo().CheckBoxFor(model => model.HasCardDelivered).Enable(@Model.IsEdit)
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.CardNumber, Html.Resource("CardNumber", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-6">
                                    @Html.Kendo().TextBoxFor(model => model.CardNumber).HtmlAttributes(new { @class = "form-control form-control-md10" }).Name("CardNumber").Enable(@Model.IsEdit)
                                    <span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="To" data-valmsg-for="To" id="CardNumber_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("CardNumberValid", PublicResources)</span>
                                </div>
                            </div>
                            @if (Model.IsEdit == true)
                            {

                                <div class="col-lg-12">
                                    <button type="button" onclick="SaveRegistration();" class="btn btn-primary general-btn" data-toggle="#phoneInfo">
                                        @Html.Resource("save", PublicResources)
                                    </button>
                                </div>
                            }



                        </fieldset>
                    </div>
                </div>

            </div>
            <!-- end widget content -->
        </div>
    <!-- end widget -->



    }
    



</article>

<script type="text/javascript">
    $(document).ready(function () {
       // CheckNumericOnly();
        HideContactInformationValidation();
        $.validator.setDefaults({
            ignore: ""
        });

    });

    if ('@Model.IsEdit' === "true") {

    }

    else {
        setTimeout(function () {
            $("#Class_ID").data("kendoDropDownList").enable(false);
            $("#Division_ID").data("kendoDropDownList").enable(false);
        }, 1000);



    }

</script>
