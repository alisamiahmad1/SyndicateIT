                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.BankNumber, Html.Resource("BankNumber", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().TextBoxFor(model => model.BankNumber).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = @Html.Resource("SelectBankNumber", PublicResources) }).Name("BankNumber").Enable(@Model.IsEdit)
                                    @*<span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="BankNumber" data-valmsg-for="BankNumber" id="BankNumber_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("RequiredBankNumber", PublicResources)</span>*@
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.AccountName, Html.Resource("AccountName", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().TextBoxFor(model => model.AccountName).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = @Html.Resource("SelectAccountName", PublicResources) }).Name("AccountName").Enable(@Model.IsEdit)
                                    @*<span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="AccountName" data-valmsg-for="AccountName" id="Company_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("RequiredAccountName", PublicResources)</span>*@
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.AccountNumber, Html.Resource("AccountNumber", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().TextBoxFor(model => model.AccountNumber).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("SelectAccountNumber", PublicResources) }).Name("AccountNumber").Enable(@Model.IsEdit)
                                    @*<span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="AccountNumber" data-valmsg-for="AccountNumber" id="AccountNumber_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequiredAccountNumber", PublicResources)</span>*@
                                </div>
                            </div>

                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.IBAN, Html.Resource("IBAN", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().TextBoxFor(model => model.IBAN).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = @Html.Resource("SelectIBAN", PublicResources) }).Name("IBAN").Enable(@Model.IsEdit)
                                    @*<span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="IBAN" data-valmsg-for="IBAN" id="IBAN_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span> @Html.Resource("RequiredIBAN", PublicResources)</span>*@
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.RountingNumber, Html.Resource("RountingNumber", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().TextBoxFor(model => model.AccountNumber).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("SelectRountingNumber", PublicResources) }).Name("RountingNumber").Enable(@Model.IsEdit)
                                    @*<span class="k-widget k-tooltip k-tooltip-validation k-invalid-msg field-validation-error" data-for="RountingNumber" data-valmsg-for="RountingNumber" id="RountingNumber_validationMessage" style="display:none;" role="alert"><span class="k-icon k-warning"> </span>@Html.Resource("RequiredRountingNumber", PublicResources)</span>*@
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.CreationDate, Html.Resource("CreationDate", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().DatePickerFor(model => model.CreationDate).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("SelectCreationDate", PublicResources) }).Name("CreationDate").Enable(@Model.IsEdit)
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.CloseDate, Html.Resource("CloseDate", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @Html.Kendo().DatePickerFor(model => model.CloseDate).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 200, @placeholder = @Html.Resource("SelectCloseDate", PublicResources) }).Name("CloseDate").Enable(@Model.IsEdit)
                                </div>
                            </div>
                            <div class="form-group  col-sm-12">
                                @Html.LabelFor(m => m.Description, Html.Resource("Description", PublicResources), new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextArea("Description", Model.Description, new { @class = "k-textbox", style = "width: 100%;height: 100px;" })
                                </div>
                            </div>@if (@Model.IsEdit == true)
                            {
                                <div class="col-lg-2">
                                    <button type="button" onclick="SaveAccount();" class="btn bg-color-orange txt-color-white" data-toggle="#phoneInfo">
                                        @Html.Resource("LblAddAccount", PublicResources)
                                    </button>
                                </div>
                            }
                        </fieldset>
                    </div>
                </div>

            </div>
            <!-- end widget content -->
        </div>        
    }
    @Html.Partial("~/Views/ProfileManagement/Profiles/ProfileDetails/_ListAccountPartial.cshtml", Model.Accounts)
</article>

