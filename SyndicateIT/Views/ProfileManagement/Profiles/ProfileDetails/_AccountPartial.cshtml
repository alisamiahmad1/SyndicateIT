
@model SyndicateIT.Model.ViewModel.ProfileManagement.ProfileDetails.AccountViewModel
@{
    Layout = null;
    string PublicResources = "~/Views/ProfileManagement/Profiles/ProfileDetails/PublicResources";
}

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@*@Html.Partial("~/Views/Shared/_AlertPartial.cshtml", Model.Alert)*@

<article class="col-sm-12 sortable-grid ui-sortable">
    @using (Html.BeginForm("SaveAccount", "ProfileManagement", FormMethod.Post, new { @class = "", role = "form", id = "Experience-form" }))
    {
        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidgetTransparent" id="wid-id-x" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false" role="widget">
            <header role="heading">
                <span class="widget-icon"> <i class="fa fa-align-justify"></i> </span>
                <h2>@Html.Resource("LblAccountInfo", PublicResources)</h2>
                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            </header>
            <!-- widget div-->
            <div role="content">

                <div class="row">
                    <div class="widget-body">
                        @Html.Hidden("Account_ID", Model.Account_ID)
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.CountryID, Html.Resource("CountryID", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @(Html.Kendo().DropDownListFor(m => m.CountryID)
                                                                                  .DataTextField("Text")
                                                                                  .Name("CountryID")
                                                                                  .DataValueField("Value")
                                                                                  .OptionLabel(@Html.Resource("EnterCountryID", PublicResources))
                                                                                  .HtmlAttributes(new { @class = "ui-select form-control-md10" })
                                                                                 .Value(Model.CountryID.ToString())
                                                                                .Enable(@Model.IsEdit)
                                                                                .DataSource(source =>
                                                                                {
                                                                                    source.Read(read =>
                                                                                    {
                                                                                        read.Action("GetCountry", "ProfileManagement");
                                                                                    });
                                                                                }))
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.StatusID, Html.Resource("StatusID", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @(Html.Kendo().DropDownListFor(m => m.StatusID)
                                                                                          .DataTextField("Text")
                                                                                          .Name("StatusID")
                                                                                          .DataValueField("Value")
                                                                                          .OptionLabel(@Html.Resource("EnterStatusID", PublicResources))
                                                                                          .HtmlAttributes(new { @class = "ui-select form-control-md10" })
                                                                                         .Value(Model.StatusID.ToString())
                                                                                        .Enable(@Model.IsEdit)
                                                                                        .DataSource(source =>
                                                                                        {
                                                                                            source.Read(read =>
                                                                                            {
                                                                                                read.Action("GetStatusID", "ProfileManagement");
                                                                                            });
                                                                                        }))
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.AccountTypeID, Html.Resource("AccountType", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @(Html.Kendo().DropDownListFor(m => m.AccountTypeID)
                                                                                  .DataTextField("Text")
                                                                                  .Name("AccountTypeID")
                                                                                  .DataValueField("Value")
                                                                                  .OptionLabel(@Html.Resource("EnterAccountType", PublicResources))
                                                                                  .HtmlAttributes(new { @class = "ui-select form-control-md10" })
                                                                                 .Value(Model.AccountTypeID.ToString())
                                                                                .Enable(@Model.IsEdit)
                                                                                .DataSource(source =>
                                                                                {
                                                                                    source.Read(read =>
                                                                                    {
                                                                                        read.Action("GetAccountType", "ProfileManagement");
                                                                                    });
                                                                                }))
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.CurrencyID, Html.Resource("CurrencyID", PublicResources), new { @class = "col-md-4 control-label" })
                                <div class="col-md-7">
                                    @(Html.Kendo().DropDownListFor(m => m.CurrencyID)
                                                                                  .DataTextField("Text")
                                                                                  .Name("CurrencyID")
                                                                                  .DataValueField("Value")
                                                                                  .OptionLabel(@Html.Resource("EnterCurrencyID", PublicResources))
                                                                                  .HtmlAttributes(new { @class = "ui-select form-control-md10" })
                                                                                 .Value(Model.CurrencyID.ToString())
                                                                                .Enable(@Model.IsEdit)
                                                                                .DataSource(source =>
                                                                                {
                                                                                    source.Read(read =>
                                                                                    {
                                                                                        read.Action("GetCurrencyID", "ProfileManagement");
                                                                                    });
                                                                                }))
                                </div>
                            </div>
                            <div class="form-group  col-sm-6">
                                @Html.LabelFor(m => m.BankName, Html.Resource("BankName", PublicResources), new { @class = "col-md-4 control-label" })
