                                    @Html.Kendo().TextBoxFor(model => model.BankName).HtmlAttributes(new { @class = "form-control  form-control-md10", @maxlength = 150, @placeholder = @Html.Resource("SelectBankName", PublicResources) }).Name("BankName").Enable(@Model.IsEdit)
