@model SyndicateIT.DataLayer.DataContext.T_Document_Form_Category

@{
    ViewBag.Title = "Edit";
}
<div id="content">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-title txt-color-blueDark">
                Edit Form Category
                @Html.ActionLink("Back to List", "Index", null, new { style = "float:right" })
            </h1>
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm("Edit", "Document_Form_Category", FormMethod.Post, new { @class = "", role = "form" }))
        {
            <fieldset>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m=>m.Id)
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group  col-sm-6">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Edit" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        }
    </div>
</div>
