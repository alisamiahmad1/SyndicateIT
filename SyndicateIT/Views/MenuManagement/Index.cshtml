
@model SyndicateIT.Model.ViewModel.MenuManagement.MenuManagementContentViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Menu";
}
<script src="~/Scripts/Views/MenuManagement/menu.js" type="text/javascript"></script>
@Html.Partial("~/Views/Shared/_NavigationPartial.cshtml", @Model.Navigation)
<div id="content">
    <div class="row">
        <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
            <h1 class="page-title txt-color-blueDark">
                <i class="@Model.ClassTitle"></i> @Model.Title<span></span>
            </h1>
        </div>
    </div>
    <section id="enrollment-content" class="">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-3">
                <!-- new widget -->
                <div class="jarviswidget jarviswidget-color-blueDark">
                    <header>
                        <h2> Roles  </h2>
                    </header>
                    <div>
                        <div class="widget-body">
                            <form>
                                <fieldset>
                                    <ul id="external-events" class="list-unstyled">
                                        @for (int i = 0; i < Model.RolesList.Count(); i++)
                                        {
                                            <li style="position: relative; width: 100%;cursor: pointer!important; " onclick="EditMenu('@Model.RolesList[i].Value');">
                                                <span class="bg-color-orange  txt-color-white" data-icon="fa-time" style="cursor: pointer!important; "><i class="fa  fa-pencil-square-o txt-color-white"></i><span style="margin-left:5%">@Model.RolesList[i].Text</span></span>
                                            </li>
                                        }
                                    </ul>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-sm-12 col-md-12 col-lg-9">
                <div class="jarviswidget jarviswidget-color-blueDark">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-calendar"></i> </span>
                        <h2> privileges </h2>
                        <div class="widget-toolbar"></div>
                    </header>
                    <div>
                        <div class="widget-body no-padding">
                            <div id="Menu-Content" class="fc fc-ltr fc-unthemed">
                                <div class="row" style="padding: 3%;"><p class="col-sm-6 font-md">no data available</p></div>
                            </div>
                            <div class="widget-body-toolbar" id="Menu-Action" style="display:none;">
                                <button class="btn btn-default" type="button" id="add-template" onclick="SaveMenuManagement();">
                                    Save
                                </button>
                            </div>
                        </div>
                    </div>
                    <!-- end widget div -->
                </div>
                <!-- end widget -->
            </div>
        </div>
    </section>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/kendo/js")
    <script type="text/javascript">

        $(document).ready(function () {
            $("AdministrationUL").children().find('li').removeClass("active");
            $("#MenuManagement").addClass("active");
            $("#AdministrationUL").show();
            $("#Administration").children().find('em').removeClass("fa fa-plus-square-o");
            $("#Administration").children().find('em').addClass("fa fa-minus-square-o");
        });
        var loader = '@Utilities.GetAbsotuleUrl("~/Content/image/ajax-loader.gif")';
        var editMenuTemplatesUrl = '@Html.GetUrl("MenuTemplatesEdit", "MenuManagement", SessionContent.Current.Corporate.IsSecure)';
        var saveMenuManagementUrl = '@Html.GetUrl("SaveMenuManagement", "MenuManagement", SessionContent.Current.Corporate.IsSecure)';
    </script>
}
