
@model List<SyndicateIT.Model.ViewModel.ServiceManagement.ServiceDetails.AgendaDailyListViewModel>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
@{
    string PublicResources = "~/Views/ServiceManagement/Agenda/_ListAgendaDailyPartial.cshtml";
}
<div class="row">
    <div class="col-sm-12">
        <div class="well">
            <table class="table table-striped table-forum">
                <tbody>
                   @for (int i = 0; i < Model.Count; i++)
                   {
                      <tr>
                        <td class="text-center">
                            <a href="#" class="btn btn-default txt-color-pink"><i class="fa fa-gear fa-lg"></i>&nbsp; <strong>@Model[i].CourseName</strong></a>
                        </td>
                        <td>on <em>@Model[i].PeriodDateString</em></td>
                    </tr>
                      <tr>
                        <td colspan="2">
                          
                            <h5>@Model[i].Title</h5>                           
                            <p style="margin-top:30px;">
                               @Model[i].Description
                            </p><em>
                                - @Model[i].TeacherName
                                <br>
                                 @Model[i].PostionName
                            </em>
                            <p style="float:right;">
                                
                                @if (@Model[i].IsPublished == false)
                                {
                                   <a class="btn btn-warning" href="javascript:void(0);" onclick="EditAgendaDaily('@Model[i].AgrndaID')">@Html.Resource("Edit", PublicResources)</a>
                                   <a class="btn btn-success" href="javascript:void(0);" onclick="PublishAgendaDaily('@Model[i].AgrndaID')">@Html.Resource("Publish", PublicResources)</a>
                                }                                                            
                            </p>
                        </td>
                    </tr>
                    }              
                   <tr>
                        <td class="text-center" style="width: 12%;"></td>
                        <td>&nbsp;</td>
                    </tr>
                    <!-- end Post -->
                </tbody>
            </table>
        </div>
    </div>
</div>